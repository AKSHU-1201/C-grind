/// A Mini Rectangle Area Calculation Project ///
#include <stdio.h>

int main(){
  int length , breadth;
  printf("Enter length: ");
  scanf("%d" , length);
  printf("Enter breadth: ");
  scanf("%d" , breadth);
  printf("The Area Of the rectangle is: %d", length*breadth);


  return 0;
}
